@{
}

<h2>Contact @Model.Name (id: @Model.Id)</h2>
<ul>
    <li><b>E-mail:</b> @Model.Email</li>
    <li><b>Phone:</b> @(Model.Phone is null ? "Unspecified" : Model.Phone)</li>
    <li><b>Date of birth:</b> @(Model.Birth is null ? "Unspecified" : Model.Birth)</li>
</ul>
<a asp-action="Index" class="btn btn-primary">Go back to list</a>
